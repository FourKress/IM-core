{
  "name": "im-core",
  "version": "1.0.0",
  "private": true,
  "author": "wudong",
  "description": "客户端核心包",
  "publishConfig": {
    "registry": "http://172.16.3.249:8081/repository/npm-hosted/"
  },
  "scripts": {
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix ./",
    "lint:style": "stylelint --fix ./**/*.{css,scss,vue,html}",
    "type:node": "tsc -p tsconfig.node.json --noEmit --composite false",
    "type:web": "pnpm run type:clean && vue-tsc -p tsconfig.web.json --composite false --declaration --emitDeclarationOnly",
    "type:check": "pnpm type:node && pnpm type:web",
    "type:clean": "rimraf ./dist",
    "dev": "pnpm -F preview run dev",
    "build:pkg": "pnpm type:check && pnpm -F ./packages/** build && pnpm type:clean",
    "build:pro": "pnpm build:pkg && pnpm -F preview run build",
    "build:run": "pnpm -F preview run preview"
  },
  "dependencies": {
    "localforage": "^1.10.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.4.2",
    "@unocss/transformer-directives": "^0.58.0",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "element-plus": "^2.4.3",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-prettier": "^4.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.1.6",
    "unocss": "^0.58.0",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.8",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0",
    "vue-tsc": "^1.8.25"
  }
}

    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-define-config": "^2.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-vue": "^9.19.2",
    "postcss-html": "^1.5.0",
